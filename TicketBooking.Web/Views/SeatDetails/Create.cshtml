@using TicketBooking.Entities;
@model TicketBooking.Web.ViewModels.SeatVM.CreateSeatViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Seat </h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SeatNumber" class="control-label"></label>
                <input asp-for="SeatNumber" class="form-control" />
                <span asp-validation-for="SeatNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusId" class="control-label"></label>
                <select asp-for="BusId" asp-items="@ViewBag.busesList" class="form-control" >
                    <option selected disabled> Select Bus Number</option>
                    </select>
                <span asp-validation-for="BusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatStatus" class="control-label"></label>
                <select asp-for="SeatStatus" asp-items="@Html.GetEnumSelectList<SeatStatus>()" class="form-control">
                    <option selected disabled> Select Status</option>
                    </select>
                <span asp-validation-for="SeatStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
